<% @deputies_research ? @view_research_render = @deputies_research[:name] : @event_research ? @view_research_render = @event_research[:id] : @votes_research ? @view_research_render = @votes_research[:id] : @view_research_render = @parties_research[:acronym] %>

<% if @view_research_render == @deputies_research&.dig(:name) %>
  <%= render partial: "home/partials/show_deputies" %>
<% elsif @view_research_render == @event_research&.dig(:id) %>
  <%= render partial: "home/partials/show_events" %>
<% elsif @view_research_render == @votes_research&.dig(:id) %>
  <%= render partial: "home/partials/show_votes" %>
<% else %>
  <%= render partial: "home/partials/show_parties" %>
<% end %>
